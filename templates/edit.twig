{% extends "base.twig" %}
{% block title %} Edit {{ entry['title'] }} {% endblock %}
{% block css %}
 <link rel="stylesheet" href="/css/normalize.css">
 <link rel="stylesheet" href="/css/site.css">
{% endblock %}
{% block content %}

  <section>
    <div class="container">
      <div class="edit-entry">
        <h2>Edit Entry</h2>
        <form method="post">
          {% import "forms.twig" as forms %}
            {{ forms.input('title', entry['title']) }}
            {{ forms.textarea('body', entry['body']) }}
          <input type="submit" value="Save Entry" class="button">
          <a href="/" class="button button-secondary">Cancel</a>
        </form>
      </div>
    </div>
  </section>

{% endblock %}
